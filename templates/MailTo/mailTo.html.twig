{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet href="{{ asset('assets/css/all.css') }}">
{% endblock %}
{% block body %}

    <style>
        .w-50, #modalWindow {
            font-family: 'American Typewriter', sans-serif;
            color: #5eb5e0;
        }

        #modalWindow {
            color: #448AFF;
            background-color: rgba(0,0,0,.6);
        }
    </style>

    <div class="w-50 h5 p-4 m-auto bg-dark bg-gradient">
        {{ form_start(form) }}
            <fieldset class="d-flex">
                <div class="flex-fill">{{ form_row(form.address) }}</div>
                <div class="flex-fill">{{ form_row(form.subject) }}</div>
            </fieldset>
            <fieldset class="d-flex">
                <div class="flex-fill">{{ form_row(form.cc) }}</div>
                <div class="flex-fill">{{ form_row(form.bcc) }}</div>
            </fieldset>
            <div class="d-flex">
                <div class="flex-fill">{{ form_row(form.body) }}</div>
            </div>
            <div class="container mt-4">
                <div class="row">
                    <div class="col text-center">
                        {{ form_row(form.generate) }}
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>



    <div class="modal fade show" id="modalWindow" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header bg-dark bg-gradient text-white">
                    <h5 class="modal-title" id="ModalLabel">Your Link</h5>
                    <button type="button" class="btn-close close-button-js" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex justify-content-between h5 bg-light bg-gradient align-items-center">
                    <div id="mailToLink" data-mailto-link="{{ mailTo.link }}" class="p-2">
                        {{ mailTo.link }}
                    </div>
                    <div class="btn-group">
                        <button id="copy-link-btn" class="btn btn-outline-dark">copy</button>
                        <button id="save-link-btn" class="btn btn-outline-primary">save</button>
                    </div>
                </div>
                <div class="modal-footer bg-dark bg-gradient">
                    <button type="button" class="btn btn-secondary close-button-js" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

 {% block javascripts %}
     {{ parent() }}
     <script src="{{ asset('assets/js/all.js') }}"></script>
     <script src="{{ asset('assets/js/mail-to.js') }}"></script>
 {% endblock %}