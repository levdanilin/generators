{% extends 'base.html.twig' %}
{% block body %}
    <div style="width: 1000px;margin: auto auto 50px;padding: 30px; background-color: #383838; font-size: 20px; font-family: 'American Typewriter', sans-serif; color: #5eb5e0">
        {{ form_start(form) }}
            <fieldset class="d-flex">
                <div class="flex-fill">{{ form_row(form.address) }}</div>
                <div class="flex-fill">{{ form_row(form.subject) }}</div>
            </fieldset>
            <fieldset class="d-flex">
                <div class="flex-fill">{{ form_row(form.cc) }}</div>
                <div class="flex-fill">{{ form_row(form.bcc) }}</div>
            </fieldset>
            <div class="d-flex">
                <div class="flex-fill">{{ form_row(form.body) }}</div>
            </div>
            <div class="container mt-4">
                <div class="row">
                    <div class="col text-center" style="font-family: 'American Typewriter', sans-serif">
                        {{ form_row(form.generate) }}
                    </div>
                </div>
            </div>
    </div>
    <div style="margin: auto; width: 1000px; background-color: bisque; padding: 20px;">
        {% set cc = '' %}
        {% set bcc = '' %}
        {% set body = '' %}

        {% if mailTo.cc != null %}
            {% set cc = mailTo.cc %}
        {% endif %}

        {% if mailTo.bcc != null %}
            {% set bcc = mailTo.bcc %}
        {% endif %}

        {% if mailTo.body != null %}
            {% set body = mailTo.body|join("%20") %}
        {% endif %}

        mailto:{{mailTo.address}}?subject={{ mailTo.subject }}&cc={{cc}}&bcc={{bcc}}&body={{body}}
    </div>

{% endblock %}