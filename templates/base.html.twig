<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Generators{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
    {% block nav %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5 fs-5">
                <div class="container-fluid">
                    <a class="navbar-brand" style="color: #5eb5e0" href="#">NXI Generators</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarScroll">
                        <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="{{ path('basicauth') }}">BasicAuth</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('mailto') }}">MailTo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('passwordgenerator') }}">Password</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {# TODO
        {{ dump(app.request.attributes.get('_route')) }}#}
        <script>
            const currentLocation = location.href;
            const navItem = document.querySelectorAll('a');
            const navLength = navItem.length;

            for(let i = 0; i < navLength; i++)
            {
                if(navItem[i].href === currentLocation)
                {
                    navItem[i].classList.add('active');
                }
            }
        </script>

    {% endblock %}
        {% block body %}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
